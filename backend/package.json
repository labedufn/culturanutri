{
  "name": "culturanutri-api",
  "version": "1.0.0",
  "main": "server.js",
  "engines": {
    "node": "20"
  },
  "description": "API para o projeto Cultura de Seguran√ßa dos Alimentos",
  "license": "(ISC OR GPL-3.0)",
  "scripts": {
    "dev:docker": "docker compose -f docker-compose.dev.yml up",
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules src/server.ts",
    "dev:migrate": "npx prisma migrate dev --name init",
    "dev:usuario": "ts-node-dev -r tsconfig-paths/register src/config/criarUsuario.ts",
    "start": "node dist/server.js",
    "usuario": "node dist/config/criarUsuario.js",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "vercel-build": "npx prisma migrate deploy",
    "lint": "eslint --ext .ts src --fix",
    "prettier-format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.45",
    "nodemailer": "^6.9.13",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.7",
    "@babel/core": "^7.24.7",
    "@babel/node": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.15",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prisma": "^5.15.0",
    "ts-jest": "^29.1.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
